{
  "name": "tonl-mcp-bridge",
  "version": "0.5.0",
  "description": "Reduce LLM token costs by 30-60% with TONL format. TypeScript library & CLI with MCP Server for bidirectional JSON/YAML â†” TONL conversion.",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "type": "module",
  "bin": {
    "tonl": "dist/cli/index.js",
    "tonl-mcp-server": "dist/mcp/index.js"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc",
    "test": "vitest run",
    "test:watch": "vitest",
    "prepublishOnly": "npm run build && npm test",
    "cli": "npm run build && node dist/cli/index.js",
    "mcp:start": "npm run build && node dist/mcp/index.js",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix",
    "format": "prettier --write \"src/**/*.ts\" \"tests/**/*.ts\"",
    "test:coverage": "vitest run --coverage"
  },
  "keywords": [
    "tonl",
    "token-optimization",
    "llm",
    "ai",
    "mcp",
    "mcp-server",
    "model-context-protocol",
    "rag",
    "json",
    "yaml",
    "compression",
    "cli",
    "typescript",
    "data-format",
    "gpt-5",
    "claude-4",
    "gemini",
    "openai",
    "anthropic",
    "google-ai",
    "token-counter",
    "cost-optimization"
  ],
  "author": "kryptomrx",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/kryptomrx/tonl-mcp-bridge.git"
  },
  "bugs": {
    "url": "https://github.com/kryptomrx/tonl-mcp-bridge/issues"
  },
  "homepage": "https://github.com/kryptomrx/tonl-mcp-bridge#readme",
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^0.5.0",
    "chokidar": "^4.0.3",
    "cli-progress": "^3.12.0",
    "commander": "^12.1.0",
    "glob": "^13.0.0",
    "js-tiktoken": "^1.0.21",
    "js-yaml": "^4.1.1",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@types/cli-progress": "^3.11.6",
    "@types/glob": "^8.1.0",
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^20.19.25",
    "@typescript-eslint/eslint-plugin": "^8.47.0",
    "@typescript-eslint/parser": "^8.47.0",
    "@vitest/coverage-v8": "^1.6.1",
    "eslint": "^9.39.1",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "prettier": "^3.6.2",
    "tsx": "^4.7.0",
    "typescript": "^5.3.0",
    "typescript-eslint": "^8.47.0",
    "vitest": "^1.0.0"
  }
}