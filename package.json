{
  "name": "tonl-mcp-bridge",
  "version": "1.0.0",
  "description": "Reduce LLM token costs by 30-60% with TONL format. TypeScript library & CLI with MCP Server for bidirectional JSON/YAML ↔ TONL conversion.",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "type": "module",
  "bin": {
    "tonl": "dist/cli/index.js",
    "tonl-mcp-server": "dist/mcp/index.js",
    "tonl-mcp-stdio": "dist/mcp/stdio.js"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc",
    "test": "NODE_OPTIONS='--max-old-space-size=8192' vitest run; TEST_EXIT=$?; echo ''; echo '━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━'; if [ $TEST_EXIT -ne 0 ]; then echo '⚠️  Note: \"Worker exited unexpectedly\" is a known Vitest issue (see KNOWN_ISSUES.md)'; echo '✅ Check the test results above - if tests passed, the code is working correctly!'; echo '━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━'; fi; exit $TEST_EXIT",
    "test:watch": "vitest",
    "prepublishOnly": "npm run build && npm test",
    "cli": "npm run build && node dist/cli/index.js",
    "mcp:start": "npm run build && node dist/mcp/index.js",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix",
    "format": "prettier --write \"src/**/*.ts\" \"tests/**/*.ts\"",
    "test:coverage": "vitest run --coverage"
  },
  "keywords": [
    "tonl",
    "token-optimization",
    "llm",
    "ai",
    "mcp",
    "mcp-server",
    "model-context-protocol",
    "rag",
    "json",
    "yaml",
    "compression",
    "cli",
    "typescript",
    "data-format",
    "gpt-5",
    "claude-4",
    "gemini",
    "openai",
    "anthropic",
    "google-ai",
    "token-counter",
    "cost-optimization"
  ],
  "author": "kryptomrx",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/kryptomrx/tonl-mcp-bridge.git"
  },
  "bugs": {
    "url": "https://github.com/kryptomrx/tonl-mcp-bridge/issues"
  },
  "homepage": "https://github.com/kryptomrx/tonl-mcp-bridge#readme",
  "engines": {
    "node": ">=18.0.0"
  },
